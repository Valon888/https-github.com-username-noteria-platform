# ==========================================
# NOTERIA - ENVIRONMENT CONFIGURATION
# ==========================================
# Kopjo këtë file në .env dhe plotëso vlerat reale

# APP CONFIGURATION
APP_ENV=development
APP_DEBUG=false
APP_NAME=Noteria

# DATABASE CONFIGURATION
DB_HOST=localhost
DB_NAME=Noteria
DB_USER=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# ADMIN CREDENTIALS (Përdor strong passwords!)
# Format: email:password_hash (password_hash përfitohet nga PHP password_hash())
ADMIN_USERS=admin@noteria.com:hash1,developer@noteria.com:hash2,support@noteria.com:hash3

# PAYMENT GATEWAY CONFIGURATION
PAYSERA_PROJECT_ID=your_project_id
PAYSERA_SECRET=your_secret_key
PAYSERA_MODE=sandbox

RAIFFEISEN_MERCHANT_ID=your_merchant_id
RAIFFEISEN_TERMINAL_ID=your_terminal_id
RAIFFEISEN_SECRET=your_secret_key
RAIFFEISEN_MODE=test

BKT_MERCHANT_ID=your_merchant_id
BKT_TERMINAL_ID=your_terminal_id
BKT_SECRET=your_secret_key

# TWILIO SMS CONFIGURATION
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_FROM_NUMBER=+1234567890

# DOCUSIGN CONFIGURATION
DOCUSIGN_INTEGRATOR_KEY=your_integrator_key
DOCUSIGN_SECRET_KEY=your_secret_key
DOCUSIGN_ACCOUNT_ID=your_account_id
DOCUSIGN_USER_ID=your_user_id
DOCUSIGN_API_MODE=demo

# SECURITY CONFIGURATION
SESSION_TIMEOUT=1800
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true

# DEVELOPER PANEL
DEVELOPER_IP_WHITELIST=127.0.0.1,::1
DEVELOPER_MFA_ENABLED=true

# EMAIL CONFIGURATION (për notifications)
MAIL_DRIVER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM_ADDRESS=noreply@noteria.al
MAIL_FROM_NAME=Noteria

# FILE UPLOAD CONFIGURATION
MAX_FILE_SIZE=10485760
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,doc,docx
UPLOAD_DIRECTORY=uploads
